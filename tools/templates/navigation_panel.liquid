    <span class="navpanel-toggle-icon icon-down-dir{% if expanded %} expanded{% endif %}" aria-hidden="false"></span>
    Navigation
    <span class="navpanel-other-icons">
      <a id="open-help" title="Open help page" href="https://firefox-source-docs.mozilla.org/contributing/searchfox.html" target="_blank"><span class="navpanel-icon icon-help-circled" aria-hidden="false"></span></a><a id="show-settings" title="Go to settings page" href="/{{ tree }}/pages/settings.html"><span class="navpanel-icon icon-cog expanded" aria-hidden="false"></span></a>
    </span>
  </button>
  <section id="panel-content" {%
           if expanded
           %}aria-expanded="true" aria-hidden="false"{%
           else
           %}aria-expanded="false" aria-hidden="true" style="display: none;"{%
           endif %}>
